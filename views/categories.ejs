<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
        .category-list {
            max-width: 800px;
            margin: 20px auto;
        }
        .category-item {
            padding: 15px;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            border-radius: 4px;
        }
        .add-button {
            display: inline-block;
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="category-list">
        <h1><%= title %></h1>
        <a href="/categories/new" class="add-button">Add New Category</a>
        
        <% categories.forEach(category => { %>
            <div class="category-item">
                <h2><%= category.name %></h2>
                <p><%= category.description %></p>
                <a href="/items/category/<%= category.id %>">View Items</a>
            </div>
        <% }); %>
        
        <a href="/">Back to Home</a>
    </div>
</body>
</html> 